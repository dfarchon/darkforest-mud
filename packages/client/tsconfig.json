{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@df/*": ["./src/Shared/*"],
      "@mud/*": ["./src/mud/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@wallet/*": ["./src/wallet/*"],
      "@frontend/*": ["./src/Frontend/*"],
      "@backend/*": ["./src/Backend/*"]
    },
    "strictPropertyInitialization": false,
    "useDefineForClassFields": false
  },
  "include": ["src"]
}
